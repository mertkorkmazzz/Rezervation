@using Blog.Entity.DTOs.TablesDTOs
@model TableDTO

@{
    Layout = "_AdminLayout"; // Admin layout dosyanızın adı
}

<h2>Delete Table</h2>

<h4>Are you sure you want to delete this table?</h4>
<div>
    <strong>Table Number:</strong> @Model.TableNumber
</div>

<form asp-action="TableDeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="TableList" class="btn btn-secondary">Cancel</a>
</form>
