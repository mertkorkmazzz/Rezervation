@using Blog.Entity.DTOs.ReservationsDTOs

@model IEnumerable<ReservationDTO>

@{
    Layout = "_AdminLayout"; // Admin layout dosyanızın adı
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Rezervasyon Listesi</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-head-fixed text-nowrap" style="width: 100%; table-layout: fixed;">
                    <thead>
                        <tr>
                            <th style="width: 15%;">İsim</th>
                            <th style="width: 15%;">Soyisim</th>
                            <th style="width: 20%;">Telefon</th>
                            <th style="width: 20%;">Tarih</th>
                            <th style="width: 15%;">Masa</th>
                            <th style="width: 15%;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.ReservationDate.ToString("g")</td>
                                <td>@item.TableNumber</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<!-- /.row -->
